#registerModal.modal.show{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
        %h1.text-center Register
      .modal-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class: 'form col-md-12 center-block'}) do |f|
          = devise_error_messages!
          .form-group
            = f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Email'
          .form-group
            = f.password_field :password, autocomplete: "off", class:'form-control input-lg', placeholder: "Password"
          .form-group
            = f.submit "Register", class: "btn btn-primary btn-lg btn-block"
            %span.pull-right
              = link_to "Login", new_user_session_path
      .modal-footer
        .col-md-12




